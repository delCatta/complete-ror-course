<h1>Edit article</h1>

<% if @article.errors.any? %>
<h2>Found errors:</h2>
<ul>
<% @article.errors.full_messages.each do |m|%>
<li>
<%= m %>
</li>
<% end %>
</ul>
<% end %>
<%= form_with(model: @article, local: true) do |f| %>

<p><%= f.label :title %> <br/> <%= f.text_field :title %></p>
<p><%= f.label :description %> <br/><%= f.text_area :description %></p>
<p><%= f.submit "Submit", disable_with: 'Submiting...' %></p>
<%end %>