<div class="mx-8 mt-4 lg:flex">
  <div class=" lg:w-1/2 border-gray-200 border lg:border-l-0 lg:border lg:border-gray-200 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="flex text-center">
      <div class="text-gray-900 font-bold text-xl mb-2"><%= link_to category.name, category_path(category) %></div>
      <div class="flex-grow"></div>
      <div class="text-sm">
      <%= link_to category_path(category) do %>
        <p class="text-gray-600">
        <%= pluralize(category.articles.count,"article") %></p>
        <% end %>
      </div>
    </div>
    <div class="flex items-center">
      <% if logged_in? && (current_user.admin?)%>
          <%= link_to 'Edit', edit_category_path(category) ,class:"btn-primary"%>
        <%= button_to 'Delete', category, method: :delete,class:"btn-danger"%>
      <% end %>
    </div>
  </div>
</div>
