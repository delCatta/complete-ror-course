<div class="mx-8 mt-4 lg:flex">
  <div class="border-r lg:w-1/2 border-b border-l border-gray-200 lg:border-l-0 lg:border-t lg:border-gray-200 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
      <div class="text-gray-900 font-bold text-xl mb-2"><%= link_to category.name, category_path(category) %></div>
    </div>
    <div class="flex items-center">
      <div class="text-sm">
        <p class="text-gray-600"><%= time_ago_in_words category.updated_at %> ago</p>
      </div>
      <div class="flex-grow"></div>
      
      <% if logged_in? && (current_user.admin?)%>
          <%= link_to 'Edit', edit_category_path(category) ,class:"btn-primary"%>
        <%= button_to 'Delete', category, method: :delete,class:"btn-danger"%>
      <% end %>
      
    </div>
  </div>
</div>
