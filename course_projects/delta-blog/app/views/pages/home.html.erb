<div class="h-1/2 flex flex-col">
  <div class="px-10 md:px-40 pt-20">
    <h1 class="font-bold deltaBlog">Delta Blog</h1>
    <h1 class="deltaBlog"> Cooler than Alpha</h1>
  </div>
  <div class="bg-gray-500 rounded-t-[50px] rounded-b-[10px] px-10 py-10 mt-8">
    <p class="text-4xl text-white"> Latest Articles </p>
    <div class="flex flex-col md:flex-row my-4">
      <% if !@articles.blank? %>
        <% for article in @articles %>
          <div class="flex-grow my-8 md:mx-8">
            <%= render partial: 'articles/card', locals: {article: article} %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
