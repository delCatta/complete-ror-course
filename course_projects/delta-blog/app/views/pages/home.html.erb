<div class="h-screen flex flex-col">
  <div class="px-40 pt-20">
    <h1 class="font-bold deltaBlog">Delta Blog</h1>
    <h1 class="deltaBlog"> Cooler than Alpha</h1>
  </div>
  <div class="bg-gray-500 rounded-t-lg px-10 py-10 flex-grow mt-8">
    <p class="text-4xl text-teal-500"> Latest Articles </p>
    <div class="flex my-4">
      <% if !@articles.blank? %>
        <% for article in @articles %>
          <div class="grow mx-8">
            <%= render partial: 'articles/card', locals: {article: article} %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
